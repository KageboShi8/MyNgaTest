<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape>
            <solid android:color="@color/color_white_selector" />
            <corners android:radius="2.0dip" />
        </shape>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/color_white_selector" />
                    <stroke android:width="1.0dip" android:color="#ff66b907" />
                    <corners android:radius="2.0dip" />
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/nga_rbtn_default_bg" />
                <bitmap android:gravity="center|right|top" android:src="@drawable/skin_in_use" />
            </item>
        </layer-list>
    </item>
</selector>